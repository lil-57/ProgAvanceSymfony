{% extends 'base.html.twig' %}

{% block title %}{{ burger.name }} - Los Pollos Burgers{% endblock %}

{% block content %}
<div class="row mb-4">
    <div class="col-12 text-center">
        <a href="{{ path('burger_index') }}" class="btn btn-secondary">‚Üê Retour aux burgers</a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card pollos-animation">
            <div class="card-body text-center">
                {% if burger.image %}
                    <img src="{{ asset('burger-image.jpg') }}" alt="{{ burger.name }}" class="img-fluid rounded mb-3" style="max-width: 300px; border: 3px solid #FFD700;">
                {% else %}
                    <div class="pollos-highlight mb-3 p-4">
                        <h3>üçî</h3>
                        <p>Image non disponible</p>
                    </div>
                {% endif %}
                <h2 class="card-title">{{ burger.name }}</h2>
                <div class="mt-3">
                    <span class="pollos-badge" style="font-size: 1.5rem;">{{ burger.price }}‚Ç¨</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">üç¥ Composition</h3>
                
                <div class="pollos-highlight mb-3">
                    <h5>üçû Pain</h5>
                    {% if burger.pain %}
                        <p><strong>{{ burger.pain.name }}</strong></p>
                    {% else %}
                        <p class="text-muted">Aucun pain sp√©cifi√©</p>
                    {% endif %}
                </div>

                <div class="pollos-highlight mb-3">
                    <h5>üßÖ Oignons</h5>
                    {% if burger.oignons|length > 0 %}
                        {% for oignon in burger.oignons %}
                            <span class="pollos-badge me-2 mb-2">{{ oignon.name }}</span>
                        {% endfor %}
                    {% else %}
                        <p class="text-muted">Aucun oignon</p>
                    {% endif %}
                </div>

                <div class="pollos-highlight mb-3">
                    <h5>üå∂Ô∏è Sauces</h5>
                    {% if burger.sauces|length > 0 %}
                        {% for sauce in burger.sauces %}
                            <span class="pollos-badge me-2 mb-2">{{ sauce.name }}</span>
                        {% endfor %}
                    {% else %}
                        <p class="text-muted">Aucune sauce</p>
                    {% endif %}
                </div>


            </div>
        </div>
    </div>
</div>

{% if burger.commentaires|length > 0 %}
    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">üí¨ Avis clients</h3>
                    <div class="row">
                        {% for commentaire in burger.commentaires %}
                            <div class="col-md-6 mb-3">
                                <div class="pollos-highlight">
                                    <p>"{{ commentaire.name }}"</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
{% endblock %}