{% extends 'base.html.twig' %}

{% block title %}üìä Burgers avec au moins {{ minIngredients }} ingr√©dient{% if minIngredients > 1 %}s{% endif %}{% endblock %}

{% block content %}
<div class="text-center mb-4">
    <h1>üìä Burgers avec au moins {{ minIngredients }} ingr√©dient{% if minIngredients > 1 %}s{% endif %}</h1>
    <p class="text-muted">Recherche de burgers riches en ingr√©dients (pain + oignons + sauces)</p>
    <a href="{{ path('burger_index') }}" class="btn btn-secondary me-2">‚Üê Retour aux burgers</a>
    <a href="{{ path('home') }}" class="btn btn-secondary">‚Üê Retour √† l'accueil</a>
</div>

{% if burgers is empty %}
    <div class="text-center">
        <div class="alert alert-warning">
            <h4>üòî Aucun burger trouv√© !</h4>
            <p>Aucun burger ne contient au moins <strong>{{ minIngredients }}</strong> ingr√©dient{% if minIngredients > 1 %}s{% endif %}.</p>
            <p><small>Essayez avec un nombre plus petit d'ingr√©dients.</small></p>
        </div>
    </div>
{% else %}
    <div class="alert alert-success text-center mb-4">
        <strong>{{ burgers|length }} burger(s) trouv√©(s)</strong> avec au moins {{ minIngredients }} ingr√©dient{% if minIngredients > 1 %}s{% endif %}
    </div>
    
    <div class="row">
        {% for burger in burgers %}
            {% set ingredientCount = 0 %}
            {% if burger.pain %}{% set ingredientCount = ingredientCount + 1 %}{% endif %}
            {% set ingredientCount = ingredientCount + burger.oignons|length %}
            {% set ingredientCount = ingredientCount + burger.sauces|length %}
            
            <div class="col-md-4 mb-4">
                <div class="card pollos-animation">
                    <!-- Badge du nombre d'ingr√©dients -->
                    <div class="position-absolute top-0 end-0 m-2">
                        <span class="badge 
                            {% if ingredientCount >= 5 %}bg-success{% endif %}
                            {% if ingredientCount == 4 %}bg-primary{% endif %}
                            {% if ingredientCount == 3 %}bg-warning text-dark{% endif %}
                            {% if ingredientCount == 2 %}bg-info{% endif %}
                            {% if ingredientCount == 1 %}bg-secondary{% endif %}
                        ">
                            {{ ingredientCount }} ingr√©dient{% if ingredientCount > 1 %}s{% endif %}
                        </span>
                    </div>
                    
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ burger.name }}</h5>
                        <p class="card-text">
                            <span class="pollos-badge">{{ burger.price }}‚Ç¨</span>
                        </p>
                        
                        <!-- D√©tail des ingr√©dients -->
                        <div class="text-start small">
                            {% if burger.pain %}
                                <p class="mb-1">üçû <strong>Pain:</strong> {{ burger.pain.name }}</p>
                            {% endif %}
                            
                            {% if burger.oignons is not empty %}
                                <p class="mb-1">üßÖ <strong>Oignon{% if burger.oignons|length > 1 %}s{% endif %}:</strong>
                                    {% for oignon in burger.oignons %}
                                        {{ oignon.name }}{% if not loop.last %}, {% endif %}
                                    {% endfor %}
                                </p>
                            {% endif %}
                            
                            {% if burger.sauces is not empty %}
                                <p class="mb-1">ü•´ <strong>Sauce{% if burger.sauces|length > 1 %}s{% endif %}:</strong>
                                    {% for sauce in burger.sauces %}
                                        {{ sauce.name }}{% if not loop.last %}, {% endif %}
                                    {% endfor %}
                                </p>
                            {% endif %}
                        </div>
                        
                        <div class="mt-3">
                            <a href="{{ path('burger_show', {id: burger.id}) }}" class="btn btn-primary btn-sm">
                                Voir d√©tails ‚Üí
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}

<div class="text-center mt-4">
    <h5>üî¢ Essayer d'autres recherches :</h5>
    <div class="btn-group" role="group">
        <a href="{{ path('burger_minimum_ingredients', {minIngredients: 1}) }}" 
           class="btn btn-outline-info {% if minIngredients == 1 %}active{% endif %}">
           ‚â• 1 ingr√©dient
        </a>
        <a href="{{ path('burger_minimum_ingredients', {minIngredients: 2}) }}" 
           class="btn btn-outline-info {% if minIngredients == 2 %}active{% endif %}">
           ‚â• 2 ingr√©dients
        </a>
        <a href="{{ path('burger_minimum_ingredients', {minIngredients: 3}) }}" 
           class="btn btn-outline-info {% if minIngredients == 3 %}active{% endif %}">
           ‚â• 3 ingr√©dients
        </a>
        <a href="{{ path('burger_minimum_ingredients', {minIngredients: 4}) }}" 
           class="btn btn-outline-info {% if minIngredients == 4 %}active{% endif %}">
           ‚â• 4 ingr√©dients
        </a>
        <a href="{{ path('burger_minimum_ingredients', {minIngredients: 5}) }}" 
           class="btn btn-outline-info {% if minIngredients == 5 %}active{% endif %}">
           ‚â• 5 ingr√©dients
        </a>
    </div>
</div>
{% endblock %}