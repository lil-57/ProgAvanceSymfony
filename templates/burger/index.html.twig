{% extends 'base.html.twig' %}

{% block title %}üçî Nos Burgers{% endblock %}

{% block content %}
<div class="text-center mb-4">
    <h1>üçî Nos Burgers</h1>
    <a href="{{ path('home') }}" class="btn btn-secondary">‚Üê Retour √† l'accueil</a>
</div>

{% if burgers is empty %}
    <div class="text-center">
        <p>Aucun burger disponible pour le moment.</p>
    </div>
{% else %}
    <div class="row">
        {% for burger in burgers %}
            <div class="col-md-4 mb-4">
                <a href="{{ path('burger_show', {id: burger.id}) }}" class="text-decoration-none">
                    <div class="card pollos-animation">
                        <div class="card-body text-center">
                            <h5 class="card-title">{{ burger.name }}</h5>
                            <p class="card-text">
                                <span class="pollos-badge">{{ burger.price }}‚Ç¨</span>
                            </p>
                            {% if burger.pain %}
                                <p><small>Pain: {{ burger.pain.name }}</small></p>
                            {% endif %}
                            <div class="mt-3">
                                <span class="btn btn-primary btn-sm">Voir d√©tails ‚Üí</span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}