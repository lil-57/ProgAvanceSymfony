{% extends 'base.html.twig' %}

{% block title %}💬 Avis Clients{% endblock %}

{% block content %}
<div class="text-center mb-4">
    <h1>💬 Avis Clients</h1>
    <a href="{{ path('home') }}" class="btn btn-secondary">← Retour à l'accueil</a>
</div>

{% if commentaires is empty %}
    <div class="text-center">
        <p>Aucun avis disponible pour le moment.</p>
    </div>
{% else %}
    <div class="row">
        {% for commentaire in commentaires %}
            <div class="col-md-6 mb-4">
                <div class="card pollos-animation">
                    <div class="card-body">
                        <p class="card-text">"{{ commentaire.name }}"</p>
                        {% if commentaire.burger %}
                            <small class="text-muted">À propos de: {{ commentaire.burger.name }}</small>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}