{% extends 'base.html.twig' %}

{% block title %}🍞 Nos Pains{% endblock %}

{% block content %}
<div class="text-center mb-4">
    <h1>🍞 Nos Pains</h1>
    <a href="{{ path('home') }}" class="btn btn-secondary">← Retour à l'accueil</a>
</div>

{% if pains is empty %}
    <div class="text-center">
        <p>Aucun pain disponible pour le moment.</p>
    </div>
{% else %}
    <div class="row">
        {% for pain in pains %}
            <div class="col-md-4 mb-4">
                <div class="card pollos-animation">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ pain.name }}</h5>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}