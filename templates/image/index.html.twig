{% extends 'base.html.twig' %}

{% block title %}📸 Nos Images{% endblock %}

{% block content %}
<div class="text-center mb-4">
    <h1>📸 Nos Images</h1>
    <a href="{{ path('home') }}" class="btn btn-secondary">← Retour à l'accueil</a>
</div>

{% if images is empty %}
    <div class="text-center">
        <p>Aucune image disponible pour le moment.</p>
    </div>
{% else %}
    <div class="row">
        {% for image in images %}
            <div class="col-md-4 mb-4">
                <div class="card pollos-animation">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ image.name }}</h5>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
