{% extends 'base.html.twig' %}

{% block title %}üßÖ Nos Oignons{% endblock %}

{% block content %}
<div class="text-center mb-4">
    <h1>üßÖ Nos Oignons</h1>
    <a href="{{ path('home') }}" class="btn btn-secondary">‚Üê Retour √† l'accueil</a>
</div>

{% if oignons is empty %}
    <div class="text-center">
        <p>Aucun oignon disponible pour le moment.</p>
    </div>
{% else %}
    <div class="row">
        {% for oignon in oignons %}
            <div class="col-md-4 mb-4">
                <div class="card pollos-animation">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ oignon.name }}</h5>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}